<%= form_with(model: attribute, url: project_model_attributes_path(@project, @model)) do |form| %>
  <% if attribute.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(attribute.errors.count, "error") %> prohibited this model from being saved:</h2>

      <ul>
        <% attribute.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, autofocus: true %>
  </div>

  <div>
    <%= form.label :kind, style: "display: block" %>
    <%= form.select :kind, [["String", "string"], ["Integer", "integer"], ["Boolean", "boolean"]], selected: "string" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, readonly: attribute.persisted? %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
