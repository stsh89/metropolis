<p style="color: green"><%= notice %></p>

<%= render "ui/components/breadcrumbs",
    breadcrumbs: projects_breadcrumbs(page_code: :show),
    current_page_name: @project.name %>

<%= render "ui/elements/title", title: @project.name %>

<%= render "ui/components/actions", links: [
    link_to("Class diagram", project_class_diagram_path(@project)),
    link_to("Rename", edit_project_path(@project)),
    link_to("Archive", project_archive_path(@project), data: { "turbo-method": :put })
] %>

<div class="block">
  <%= render @project %>
</div>

<%= render "ui/elements/subtitle", subtitle: "Models" %>

<%= render "ui/components/actions", links: [
    link_to("New", new_project_model_path(@project)),
] %>

<%= render "ui/components/simple_cards_list", values: models_simple_card_values(@project, @project.models) %>
